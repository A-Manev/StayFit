@{ this.ViewData["Title"] = "Scheduler";}
<div class="container">
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary btn-pill my-3 col-md-6" asp-controller="Exercises" asp-action="Workout">Create workout <i class="far fa-plus-square"></i></a>
    </div>

    <div class="btn-group col-md-12 my-3">
        <a class="btn btn-light btn-pill border" asp-controller="Exercises" asp-action="Scheduler" asp-route-year="@Model.Year" asp-route-month="@(Model.Month - 1)">Previous month <i class="far fa-calendar-minus"></i></a>
        <a class="btn btn-light btn-pill" asp-controller="Exercises" asp-action="Scheduler" asp-route-year="@Model.Year" asp-route-month="@(Model.Month + 1)">Next month <i class="far fa-calendar-plus"></i></a>
    </div>

    <calendar month="@Model.Month" year="@Model.Year" events="@Model.Events" />
</div>