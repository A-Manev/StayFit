@model StayFit.Web.ViewModels.Exercises.ExercisesListViewModel
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
            <a class="page-link"
               asp-action="Search"
               asp-route-id="@Model.PreviousPageNumber"
               asp-route-name="@Model.Name"
               asp-route-bodyPart="@Model.BodyPart"
               asp-route-difficulty="@Model.Difficulty"
               asp-route-exerciseType="@Model.ExerciseType"
               asp-route-equipmentId="@Model.EquipmentId">
                Previous
            </a>
        </li>
        @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Search"
                       asp-route-id="@i"
                       asp-route-name="@Model.Name"
                       asp-route-bodyPart="@Model.BodyPart"
                       asp-route-difficulty="@Model.Difficulty"
                       asp-route-exerciseType="@Model.ExerciseType"
                       asp-route-equipmentId="@Model.EquipmentId">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item active">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Search"
                       asp-route-id="@i"
                       asp-route-name="@Model.Name"
                       asp-route-bodyPart="@Model.BodyPart"
                       asp-route-difficulty="@Model.Difficulty"
                       asp-route-exerciseType="@Model.ExerciseType"
                       asp-route-equipmentId="@Model.EquipmentId">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
            <a class="page-link"
               asp-action="Search"
               asp-route-id="@Model.NextPageNumber"
               asp-route-name="@Model.Name"
               asp-route-bodyPart="@Model.BodyPart"
               asp-route-difficulty="@Model.Difficulty"
               asp-route-exerciseType="@Model.ExerciseType"
               asp-route-equipmentId="@Model.EquipmentId">
                Next
            </a>
        </li>
    </ul>
</nav>
